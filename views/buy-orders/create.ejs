<div class="app-content content">
  <div class="content-wrapper">
    <div class="content-body">
      <section class="textarea-select">
        <div class="row">
          <div class="col-12 mt-3 mb-1">
              <h4 class="text-uppercase">Create Buy Order</h4>
          </div>
        </div>
        <div class="row match-height">
          <div class="col-lg-9 col-md-12">
              <div class="card">
                  <div class="card-header">
                      <h4 class="card-title">Buy Order</h4>
                  </div>
                  <div class="card-block">
                      <div class="card-body">
                        <div class="card-body">
                          <form action="/buy-orders/create" method="POST" enctype="application/x-www-form-urlencoded" autocomplete="off">
                            <input type="hidden" name="userId" value="<%= user.id%>">
                            <input type="hidden" name="blockchainId" value="1">
                            <input type="hidden" name="buyOrderStatusId" value="1">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                              <h5 class="mt-2">Blockchains</h5>
                              <fieldset class="form-group">
                                <select class="form-group" name="blockchainId">
                                  <% for(let blockchain of blockchains) { %>
                                    <option value="<%= blockchain.id%>"><%= blockchain.abbrevation%></option>
                                  <% } %>
                                </select>
                              </fieldset>
                              
                              <h5 class="mt-2">Label</h5>
                              <fieldset class="form-group">
                                <input type="text" class="form-control" name="label">
                              </fieldset>

                              <h5 class="mt-2">Token Address</h5>
                              <fieldset class="form-group">
                                <input type="text" class="form-control" name="address">
                              </fieldset>

                              <h5 class="mt-2">Pair Address (Liquidity Pool)</h5>
                              <fieldset class="form-group">
                                <input type="text" class="form-control" name="pairAddress">
                              </fieldset>

                              <h5 class="mt-2">Slippage</h5>
                              <fieldset class="form-group">
                                <input type="number" class="form-control" name="slippage" value="<%= configuration.slippage %>">
                              </fieldset>

                              <h5 class="mt-2">Amount Given (BNB)</h5>
                              <fieldset class="form-group">
                                <input type="number" step="0.001" class="form-control" name="amountGiven" value="<%= configuration.amountGiven %>">
                              </fieldset>

                              <h5 class="mt-2">Multiplier Expected (If 0, it won't sell)</h5>
                              <fieldset class="form-group">
                                <input type="number" step="0.1" class="form-control" id="placeholderInput" name="autoMultiplier" value="<%= configuration.autoMultiplier %>">
                              </fieldset>

                              <h5 class="mt-2">Max Time to wait (seconds) before trading (useful in some cases)</h5>
                              <fieldset class="form-group">
                                <input type="number" class="form-control" id="placeholderInput" name="timeBeforeBuy" value="<%= configuration.timeBeforeBuy %>">
                              </fieldset>

                              <h5 class="mt-2">Gas fees (Wei | 5 = low, 15 = above average, 20 = fast)</h5>
                              <fieldset class="form-group">
                                <input type="number" class="form-control" name="gasfees" value="<%= configuration.gasfees %>">
                              </fieldset>

                              <h5 class="mt-2">Max Time per Trade (seconds) before forced sale</h5>
                              <fieldset class="form-group">
                                <input type="number" class="form-control" id="placeholderInput" name="maxTime" value="<%= configuration.maxTime %>">
                              </fieldset>

                            <button type="submit" class="btn mr-1 mb-1 btn-success btn-lg">Save</button>
                          </form>
                        </div>
                      </div>
                  </div>
              </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>