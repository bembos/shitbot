<div class="app-content content">
    <div class="content-wrapper">
      <div class="content-body"><!-- Basic Inputs start -->
        <section class="textarea-select">
        <!-- Textarea start -->
          <%- include ('../layout/partials/messages') %>
          <div class="row">
            <div class="col-12 mt-3 mb-1">
                <h4 class="text-uppercase">User Configuration</h4>
                <p>Since you are giving your private key, it is recommended that you use a dummy wallet account. </p>
            </div>
          </div>
          <div class="row match-height">
            <div class="col-lg-9 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">User Configuration</h4>
                    </div>
                    <div class="card-block">
                        <div class="card-body">
                          <div class="card-body">
                            <form action="/user/configuration/<%= bot.id %>" method="POST">
                              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  
                              <h5 class="mt-2">Wallet Public Key</h5>
                              <fieldset class="form-group">
                                <input type="text" class="form-control" id="placeholderInput" name="walletAddress" value="<%= bot.walletAddress %>">
                              </fieldset>
  
                              <h5 class="mt-2">Wallet Private Key</h5>
                              <fieldset class="form-group">
                                <input type="text" class="form-control" id="placeholderInput" name="walletPrivate" value="<%= bot.walletPrivate %>">
                              </fieldset>
  
                              <button type="submit" class="btn mr-1 mb-1 btn-success btn-lg">Save</button>
                            </form>
                          </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
        <!-- Textarea end -->
        </section>
      </div>
    </div>
  </div>